   <div class=" text-center pink ">
        <h1>Eat Da Burger!</h1>
        <img src="/assets/img/burger.png"  class="img-responsive center-block burger"  alt="Eat Da Burger!">
    <div class="row">
        <div class="col-6">
           <h3>Burgers </h3>
            <ul class="list-group">
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li class="list-group-item">
                            <form action="/{{this.id}}" method="POST" enctype="application/json">
                                <span style="float:left" > {{this.id}}. {{this.burger_name}}</span>
                                <input type="hidden" name="burger_id" value="{{this.id}}">
                                <button type="submit" class="btn btn-sm btn-pos btn-secondary" style="float:right">Devour</button>
                            </form>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
           <h3>Burgers Devoured</h3>
            <ul class="list-group">
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li class="list-group-item">
                            <form action="/{{this.id}}" method="POST" enctype="application/json">
                                 <span style="float:left" > {{this.id}}. {{this.burger_name}}</span>
                                <input type="hidden" name="burger_id" value="{{this.id}}">
                            </form>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <br>
    <div class="row ">
        <div class="col ">
                <form method="POST" action="/insert" enctype="application/json">
               <center>
                   <textarea type="text"  class="form-control" style="width:80%" rows="5" name="burger_name"></textarea>
                </center> 
                <br>
                <input class="btn btn-primary"type="submit">
            </form>
        </div>
       
    </div>
    
